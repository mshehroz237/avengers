<form class="signup-form text-center mt-4">
  <div>
    <label for="username-signup" style="color: black;">Username:</label>
    <input type="text" id="username-signup" style="color: grey;" placeholder="Please type your username..." />
  </div>
  <div>
    <label for="email-signup" style="color: black;">Email:</label>
    <input type="email" id="email-signup" style="color: grey;"  placeholder="Please type your email address..."/>
  </div>
  <div>
    <label for="password-signup" style="color: black;">Password:</label>
    <input type="password" id="password-signup" style="color: grey;"  placeholder="Please type your password..." />
  </div>
  <div>
    <button type="submit" class="bt btn-secondary">Sign Up</button>
  </div>
</form>

<script src="/javascript/signup.js"></script>